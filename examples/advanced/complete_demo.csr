def test_conditionals():
    """Test if/elif/else statements"""
    print("=== Conditional Logic ===")
    for num in range(3):
        if num == 0:
            print("Zero")
        elif num == 1:
            print("One")
        else:
            print("Many")
    print()

def test_loops():
    """Test loop constructs"""
    print("=== Loop Constructs ===")
    
    # While loop
    print("While loop:")
    i = 0
    while i < 3:
        print("  Count:", i)
        i = i + 1
    
    # For loop with range
    print("For loop:")
    for j in range(3):
        print("  Iteration:", j)
    print()

def test_recursion():
